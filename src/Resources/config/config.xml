        <input-field type="single-select">
            <name>gthEnvironment</name>
            <options>
                <option>
                    <id>dev</id>
                    <name>DEV Server</name>
                    <name lang="de-DE">Local Server</name>
                </option>
                <option>
                    <id>stage</id>
                    <name>STAGE Server</name>
                    <name lang="de-DE">STAGE Server</name>
                </option>
                <option>
                    <id>prod</id>
                    <name>PROD Server</name>
                    <name lang="de-DE">PROD Server</name>
                </option>
            </options>
            <defaultValue>dev</defaultValue>
            <label>GTH Server Environment</label>
            <label lang="de-DE">GTH Serverumgebung</label>
        </input-field>
        <input-field type="text">
            <name>parcelIdFieldName</name>
            <copyable>true</copyable>
            <placeholder>custom_gth_ParcelId</placeholder>
            <label>Custom field name</label>
            <helpText>Full name for custom field added to Order to hold GTH parcel ID</helpText>
        </input-field>
        <input-field type="text">
            <name>stickerUrlFieldName</name>
            <copyable>true</copyable>
            <placeholder>custom_gth_StickerUrl</placeholder>
            <label>Custom field name</label>
            <helpText>Full name for custom field added to Order to hold GTH sticker URL</helpText>
        </input-field>
        <input-field type="password">
            <name>apikey</name>
            <label>API Key</label>
            <label lang="de-DE">API Key</label>
            <helpText>Your company api key</helpText>
            <helpText lang="de-DE">Dein Company API Key</helpText>
        </input-field>
