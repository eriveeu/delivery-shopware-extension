<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="https://symfony.com/schema/dic/services https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults autowire="true" autoconfigure="true" public="false">
        </defaults>

        <service id="Erive\Delivery\Command\OrderSubmissionCommand">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService" />
            <argument type="service" id="order.repository" />
            <tag name="console.command" />
        </service>

        <service id="Erive\Delivery\Listener\OrderPaidListener" >
            <argument type="service" id="logger" />
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService" />   
            <argument type="service" id="order.repository" />
            <tag name="kernel.event_listener" event="state_enter.order_transaction.state.paid" method="onOrderTransactionState" />
        </service>

        <service id="Erive\Delivery\ScheduledTask\OrderSubmissionTask">
            <tag name="shopware.scheduled.task" />
        </service>

        <service id="Erive\Delivery\ScheduledTask\OrderSubmissionTaskHandler">
            <argument type="service" id="scheduled_task.repository"/>
            <argument type="service" id="logger" />
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService" />
            <argument type="service" id="order.repository" />
            <tag name="messenger.message_handler" />
        </service>
    </services>
</container>
